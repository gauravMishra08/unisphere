  <script>
    function submitQuestion() {
      const inputBox = document.querySelector('.input-box');
      const question = inputBox.value.trim();

      if (question) {
        alert("Your question has been submitted: " + question);
        inputBox.value = "";
        alert("Please enter a question before submitting.");
      }
    }
  </script>
